/* TitlePane and Fieldset
 * 
 * Styling TitlePane means styling the TitlePane title and its content container  (dijitTitlePane)
 * 
 * TitlePane title:
 * 1. TitlePane title (default styling): 
 * 		.dijitTitlePaneTitle - TitlePane's title div style: background-color, border
 *
 * 2. hovered TitlePane title (ie, mouse hover on a title bar)
 * 		.dijitTitlePaneTitleHover - styles when mouse hover on the title div
 * 
 * 3. active TitlePane title (ie, mouse down on a title bar)
 * 		.dijitTitlePaneTitleActive - styles when mouse down on the title div
 * 
 * 
 * TitlePane Content Container:
 * 1. outer/inner container: 
 * 		.dijitTitlePaneContentOuter / dijitTitlePaneContentInner - styles for the content outer div
 */

@import "variables";

.calcite .dijitTitlePaneTitle {
	background-color: $unselected-background-color;
	standard-gradient();
	border:1px solid $border-color;
	padding: 0 7px 3px 7px;
	min-height:17px;
	color: $unselected-text-color;
}
.calcite .dijitFieldset {
	border-radius: 4px;
}
.calcite .dijitTitlePaneTitleOpen, .calcite .dijitTitlePaneTitleFixedOpen {
	background-color: $selected-background-color;
	color: $text-color;
}
.calcite .dijitTitlePaneTitleHover {
	background-color: $hovered-background-color;
	border-color: $hovered-border-color;
}
.calcite .dijitTitlePaneTitleActive {
	background-color: $pressed-background-color;
	border-color: $pressed-border-color;
	active-gradient();
}
.calcite .dijitTitlePaneTitleFocus {
	margin-top:3px;
	padding-bottom:2px;
}
.calcite .dijitTitlePane .dijitArrowNode, .calcite .dijitFieldset .dijitArrowNode {
	background-image: url($image-arrow-sprite);
	background-repeat: no-repeat;
	height: 8px;
	width: 7px;
}
.calcite .dijitTitlePaneTitleOpen .dijitArrowNode, .calcite .dijitFieldsetTitleOpen .dijitArrowNode {
	background-position: 0 0;
}
.calcite .dijitTitlePaneTitleClosed .dijitArrowNode, .calcite .dijitFieldsetTitleClosed .dijitArrowNode {
	background-position: -14px 0;
}
.calcite .dijitTitlePaneContentOuter {
	background: $pane-background-color;
	border:1px solid $border-color;
	border-top:none;
}
.calcite .dijitTitlePaneContentInner {
	padding:10px;
}
.calcite .dijitFieldsetContentInner {
	padding: 4px;
}
.calcite .dijitTitlePaneTextNode, .calcite .dijitFieldsetLegendNode {
	margin-left: 4px;
	margin-right: 4px;
	vertical-align:text-top;
}

