.calcite
  .esriMeasurement
    font-family $fontFamilyDefault
    font-size $fontSizeDefault

    .esriButton .dijitButtonNode
      padding 0

    .esriMeasurementButtonPane
      .esriButton,
      .dijitButtonNode
        outline none

      .esriButton
        .dijitButtonContents
          position absolute
          padding 5px 8px
          outline none
          cursor pointer

        .dijitButtonNode
          background none
          background-image none
          calciteArcGISPro_ButtonDefault();
          calciteArcGISPro_ButtonBorder();
          calciteWeb_RoundRadius($borderRadiusSize1);

        &.esriButtonHover .dijitButtonNode,
        &.esriButtonFocused .dijitButtonNode
          background-image none
          calciteArcGISPro_ButtonHover();

        &.esriButtonChecked .dijitButtonNode
          background-image none
          calciteArcGISPro_ButtonActive();

        &.esriButtonChecked.esriButtonHover .dijitButtonNode,
        &.esriButtonChecked.esriButtonFocused .dijitButtonNode
          calciteArcGISPro_ButtonActiveHover();

    .esriToggleButton
      .dijitButtonNode
        width 100%
        height 24px
        padding 0
        calciteArcGISPro_ButtonDefault();
        calciteArcGISPro_ButtonBorder();
        calciteWeb_RoundRadius($borderRadiusSize1);

        .dijitButtonContents
          padding-top 1px

        .dijitButtonText
          font-family $fontFamilyDefault
          font-size $fontSizeDefault

        .dijitArrowButtonInner
          background none

          &:before
            iconfont("esriIconDownArrow")
            font-size $fontSizeIconSmall
            top -1px
            left 0

      &.esriToggleButtonHover .dijitButtonNode
        calciteArcGISPro_ButtonHover();

      &.esriToggleButtonOpened .dijitButtonNode
        calciteArcGISPro_ButtonActive();

        .dijitArrowButtonInner,
        .dijitArrowButtonInner:before
          -webkit-transform: rotate(-180deg);
          -moz-transform: rotate(-180deg);
          -o-transform: rotate(-180deg);
          -ms-transform: rotate(-180deg);
          transform: rotate(-180deg);
          //transition: transform 150ms ease;

    .esriMeasurementResultLabel
      font-weight normal
      font-size $textSectionTitleSize
      border none
      border-bottom 1px solid $borderColorDivider

    .areaIcon
      //background-image: url("../dijit/images/Measure_Area16.png");
      background url( $imageMeasurementArea ); /* PNG */
      background-image url( $imageMeasurementArea_SVG ), none /* SVG */
      width 16px
      height 16px

    .distanceIcon
      //background-image: url("../dijit/images/Measure_Distance16.png");
      background url( $imageMeasurementDistance ) /* PNG */
      background-image url( $imageMeasurementDistance_SVG ), none /* SVG */
      width 16px
      height 16px

    .locationIcon
      //background-image: url("../dijit/images/Measure_Point16.png");
      background url( $imageMeasurementLocation ) /* PNG */
      background-image url( $imageMeasurementLocation_SVG ), none /* SVG */
      width 16px
      height 16px
