    .esriStopsAdd .esriStopsAddDestination
      display block
      //text-align right;
      bidi-value("text-align", right, left); // mixin for right to left, vs left to right
      margin 0 5px 5px 0

    .esriLinkButton.esriStopsAddDestination,
    .esriActivateButton
      /*calciteCSS_ActionButton_PlaceholderAction_Green();*/
      /*calciteCSS_ActionButton_Green();*/
      calciteCSS_ActionButton("greenplaceholder");
      /*float:right;*/
      text-align center
      display inline-block //block;
      margin 0 22px 0 0 //0 32px 0 33px;
      padding ($paddingDefaultSpacer - 2) ($paddingDefaultSpacer * 2)

    //.esriLinkButton.esriStopsAddDestination
    //  width 20%
    .esriActivateButton
      width 10%
      margin 0 0 0 35px
      height 32px
      //color: $textColorDefault
      &.esriDirectionsPressedButton
        calciteCSS_ActionButton_Active("greenplaceholder");
      &:before {
        iconfont("esriIconMapPin")
        font-size: $fontSizeIconDefault;
        position: relative;
        top: 0;
        left: -3px;
        line-height $fontSizeIconDefault;
      }
      &:hover,
      &:focus,
      &.esriDirectionsPressedButton:hover,
      &.esriDirectionsPressedButton:focus  {
        opacity 1
        calciteCSS_ActionButton_Hover("greenplaceholder");
        //background-position: -16px -16px;
        //color $textColorHover
      }


    .esriStopOrigin .esriStopIcon,
    .esriStopDestination .esriStopIcon
      width: 19px;
      height: 36px;
      background-repeat: no-repeat;
      background-position:center;
      -webkit-background-size: cover; /* For WebKit*/
      -moz-background-size: cover;    /* Mozilla*/
      -o-background-size: cover;      /* Opera*/
      background-size: cover;         /* Generic*/

    .esriStopOrigin .esriStopIcon
      background: url( $imageDirectionsStopOrigin ); /* PNG */
      background-image: url( $imageDirectionsStopOrigin_SVG ), none; /* SVG */
      background-repeat: no-repeat;

    .esriStopDestination .esriStopIcon
      background: url( $imageDirectionsStopDestination ); /* PNG */
      background-image: url( $imageDirectionsStopDestination_SVG ), none; /* SVG */
      background-repeat: no-repeat;

    .esriStopsRemovable .esriStop .esriStopIconRemove
      display: block;
      width: 16px; /* 21px */
      height: 16px; /* 21px */
      cursor: pointer;
      background-image none
      /*background: url("../dijit/images/Directions/remove-destination.png") no-repeat center center;*/
      //background-image: url( $imageDirectionsStopRemove );
      //background-repeat:no-repeat;
      //background-position: -16px 0;

      color: $textColorDefault
      &:before {
        iconfont("esriIconClose")
        font-size: $fontSizeIconDefault;
        position relative
        top -4px
        left -2px
      }
      &:hover,
      &:focus {
        opacity 1
        //background-position: -16px -16px;
        color: $textColorHover
      }

    .esriStopReverseColumn,
    .esriStopIconRemoveColumn
      background-color transparent

    .esriStopsReverse
      margin: 0;
      width: 21px;
      height: 21px;
      //background-image: url( $imageDirectionsStopReverse ); /*"../dijit/images/Directions/reverse.png"*/
      //background-repeat no-repeat;
      //background-position center center;
      background-image none
      background-color transparent
      cursor: pointer;
      &:before {
        iconfont("esriIconUpDownArrows")
        font-size: $fontSizeIconDefault;
        position: relative;
        top: 0;
        left: -2px;
        line-height $fontSizeIconDefault;
      }
      &:hover,
      &:focus {
        opacity 1
        calciteArcGISPro_ButtonActiveHover()
        border none
      }

    .esriReturnToStartOption
      font-family $fontFamilyDefault

    .dojoDndContainerOver,
    .dojoDndItemOver
      background-image none
      background none
      border-width 0

    .dojoDndItemAnchor,
    .dojoDndItemSelected
      background-image: none
      background-color: CalciteColorBlue5

    .esriStop .esriStopDnDHandle,
    .esriStop .esriStopDnDHandleHidden,
    .esriStop .dojoDndHandle.esriStopDnDHandle
      width 24px !important
      padding-left 0
      padding-right 0

    .esriStop .esriStopDnDHandle
      background-image none
      color $textColorDefault

      &:before {
        iconfont("esriIconDirectionsDrag")
        font-size $fontSizeIconDefault
        position relative
        top 0px
        left 0px
        line-height $fontSizeIconDefault
      }
      &:hover,
      &:focus {
        opacity 1
        calciteArcGISPro_ButtonActiveHover()
        color: $textColorHover
      }
