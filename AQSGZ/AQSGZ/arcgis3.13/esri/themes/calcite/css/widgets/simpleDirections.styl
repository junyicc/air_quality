    .esriGeocoder
      display: block;
      margin: 0;
      padding: 0; /*6px;*/
      background-image: none
      filter: none
      background transparent
      border none;
      calciteWeb_NoBoxShadow()

      input
        outline: 0;
        margin: 0;
        width: 98%;
        font-size: 12px;
        line-height: 16px;
        height: 16px;
        border-width 1px
        border-style solid
        padding: 6px;
        calciteWeb_NoBoxShadow()
        calciteArcGISPro_ButtonDefault();
        calciteWeb_RoundRadius($borderRadiusSize2)
        &:hover {
          calciteArcGISPro_ButtonHover()
          background-color CalciteColorWhite
        }
        &:focus {
          CalciteWeb_TextInput_BoxShadowInset("blue")
          outline 0
          calciteArcGISPro_ButtonHover()
          background: CalciteColorWhite
        }

    .esriStops
      margin 0
      padding 0
      width 100%
      border-collapse separate
      border-spacing 0px

    .esriStopsButtons
      margin 0

    .esriStopsClearDirections
      calciteCSS_ActionButton("default")
      padding ($paddingDefaultSpacer - 2) ($paddingDefaultSpacer * 2)
      outline none

    .esriStopsGetDirections
      /*calciteCSS_ActionButton_Blue();*/
      calciteCSS_ActionButton("blue");
      bidi-value("float", right, left); // mixin for right to left, vs left to right
      padding ($paddingDefaultSpacer - 2) ($paddingDefaultSpacer * 2)

    .esriLinkButton.esriStopsClearDirections,
    .esriLinkButton.esriStopsOptionsButton
      /*calciteCSS_ActionButton_Transparent();*/
      calciteCSS_ActionButton("transparent");
      text-align left
      display inline-block
      margin 0 0 0 22px
      padding ($paddingDefaultSpacer - 2) ($paddingDefaultSpacer * 4) ($paddingDefaultSpacer - 2) ($paddingDefaultSpacer * 2);

    .esriLinkButton.esriStopsOptionsButton
      /*padding:0;*/
      margin-left ($marginDefaultSpacer * 5);
      display block
      padding-top ($paddingDefaultSpacer * 2);

    .esriStopsClearDirections
      margin 0 $marginDefaultSpacer

    .esriStopsGetDirectionsContainer
      width: 50%;
      text-align: right;
      display: inline-block;
      float: right;
      margin-right:32px;

    .esriStopsOptionsMenu
      margin 0 0 0 35px //0 0 0 33px
      background-color CalciteColorWhite
      padding $paddingDefaultSpacer
      calciteWeb_RoundRadius($borderRadiusSize2);

    .esriTravelModesContainer
      display: none;
      word-wrap: break-word;
      margin: ($marginDefaultSpacer * 2) ($marginDefaultSpacer * 2) 0 ($marginDefaultSpacer * 7);
      min-width: 270px;

    .esriRoutesError
      calciteArcGISPro_WarningMessage();
      padding: ($paddingDefaultSpacer * 2) ($paddingDefaultSpacer * 2) $paddingDefaultSpacer ($paddingDefaultSpacer * 2);

    .esriRoutesError ul
      margin: 0;
      padding: 0;
      list-style: none;
      display: block;

    .esriRoutesError ul li
      margin: 0 0 $marginDefaultSpacer 0;

    .esriDirectionsTabButton,
    .esriDirectionsTabLastButton
      color: $textColorDefault;
      calciteWeb_RoundRadius(0);

    .esriTravelModesContainer .esriDirectionsTabButton:first-child,
    .esriStopsOptionsMenu .esriDirectionsTabButton:first-child
      calciteWeb_RoundRadius_Left($borderRadiusSize2);
      calciteWeb_RoundRadius_Right(0)

    .esriDirectionsTabButton.esriDirectionsTabLastButton
      calciteWeb_RoundRadius($borderRadiusSize2);
      calciteWeb_RoundRadius_Left(0)

    .esriDirectionsTabButton:hover
      calciteArcGISPro_ButtonHover()

    .esriDirectionsPressedButton
      calciteArcGISPro_ButtonActive()

      &:hover {
        calciteArcGISPro_ButtonActiveHover()
      }

